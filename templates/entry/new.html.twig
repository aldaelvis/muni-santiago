{% extends 'content.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/select2.min.js') }}"></script>
    <script>
        $(".select2").select2();

        let _sproduct = $("#js-product");

        _sproduct.select2({
            ajax: {
                dataType: 'json',
                type: "GET",
                url: 'https://127.0.0.1:8000/entry/product',
                data: function (params) {
                    return {
                        search: params.term
                    };
                },

                processResults: function (data) {
                    return {
                        results: $.map(data, function (item) {
                            return {
                                text: item.description,
                                slug: item.description,
                                price: item.priceUnit,
                                id: item.id
                            }
                        })
                    }
                },
                cache: true,
            },

        });

        let txtPrice = document.getElementById('js-price-product');
        let txtQuantity = document.getElementById('quantity');
        let txtId = document.getElementById('js-id-product');
        _sproduct.on('change', function () {
            const data = _sproduct.select2('data')[0];
            txtPrice.value = data.price;
            txtId.value = data.id;
        })

        let _bodyTable = document.getElementById('js-table-body');
        let totalFtd = document.getElementById('js-totalf');
        let constador = 0;
        let products = [];
        let totalF = 0.0;
        txtQuantity.addEventListener('keyup', (e) => {
            if (e.keyCode === 13) {
                e.preventDefault();

                let id = txtId.value;
                let descripcion = _sproduct.select2('data')[0].text;
                let price = txtPrice.value;
                let quantity = txtQuantity.value;
                let subtotal = price * quantity;
                for (let i = 0; i < products.length; i++) {
                    if (products[i].id === id) {
                        alert('El articulo ya esta en la lista, edite la cantidad desde la tabla');
                        txtQuantity.value = '';
                        txtPrice.value = '';
                        _sproduct.select2('data', null);
                        return;
                    }
                }

                products.push({
                    'id': id,
                    'total': subtotal,
                    'price': price,
                    'quantity': quantity,
                });
                let html = `
<tr>
<td>${constador + 1}</td>
<td hidden="hidden">
<input type="hidden" value="${id}" name="idt[${constador}]">
</td>
<td>${descripcion}</td>
<td>${price}</td>
<td>
<input name="quantityt[${constador}]" onkeyup="getItem(${constador})" type="number" value="${quantity}" class="form-control" style="width: 80px !important;">
</td>
<td id="js-total-table-${constador}">${subtotal}</td>
</tr>`;
                $(_bodyTable).append(html);
                //---
                txtQuantity.value = '';
                txtPrice.value = '';

                _sproduct.select2('data', null);
                constador++;
                calcularTotalF();

                console.log(products)
            }
        })

        function calcularTotalF() {
            for (let i = 0; i < products.length; i++) {
                totalF += products[i].total;
            }
            totalFtd.value = totalF;
            totalF = 0;
        }

        let quantityTable = document.getElementById("js-quantity-table");
        if (quantityTable !== null) {
            quantityTable.addEventListener('keyup', (e) => {
                e.preventDefault()
                console.log("evento....")
                calcularTotalF();
            })
        }

        function getItem(contador) {
            let q = $('input[name="quantityt[' + contador + ']"]').val()
            let id = $('input[name="idt[' + contador + ']"]').val()
            let totalT = document.getElementById('js-total-table-' + contador);
            for (let i = 0; i < products.length; i++) {
                if (products[i].id === id) {
                    products[i].quantity = q;
                    products[i].total = q * products[i].price;
                    totalT.innerText = products[i].total;
                    calcularTotalF();
                    console.log(totalT);
                }
            }
            // calcularTotalF();
            console.log(products);
        }

        let btnGuardar = document.getElementById("btnGuardar");
        btnGuardar.addEventListener('keydown', (e) => {
            if (event.keyCode === 13) {
                event.preventDefault();
                return false;
            }
        })
    </script>
{% endblock %}
