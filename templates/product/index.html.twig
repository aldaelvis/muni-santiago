{% extends 'content.html.twig' %}
{% block contenido %}

    <div class="page-title-box">
        <div class="row align-items-center">
            <div class="col-sm-6">
                <h4 class="page-title">Articulo</h4>
            </div>

            <div class="col-sm-6">

                <div class="float-right d-none d-md-block">
                    <a href="{{ path('product_new') }}" class="btn btn-primary waves-effect" role="button">
                        <i class="mdi mdi-plus"></i>Nuevo
                    </a>
                </div>

            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <form action="" method="get">
                        <div class="row mb-2 align-items-center">
                            <div class="col-md-2">
                                <label for="">Buscar: </label>
                            </div>
                            <div class="col-md-8">
                                <input type="text" name="search" class="form-control">
                            </div>

                            <div class="col-md-2">
                                <button type="submit" class="btn btn-secondary">Buscar</button>
                            </div>
                        </div>
                    </form>
                    <div class="table-responsive mb-2">
                        <table class="table table-bordered table-hover">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>Código</th>
                                <th>Descripción</th>
                                <th>Unidad M.</th>
                                <th>Cantidad Reque.</th>
                                <th>Precio Uni.</th>
                                <th>Opciones</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for k, p in paginator.results %}
                                <tr>
                                    <td>{{ k + 1 }}</td>
                                    <td>{{ p.code }}</td>
                                    <td>{{ p.description }}</td>
                                    <td>{{ p.measurement }}</td>
                                    <td>{{ p.quantity }}</td>
                                    <td>{{ p.priceUnit }}</td>
                                    <td>
                                        <a role="button" href="{{ path('product_edit', {'id': p.id}) }}"
                                           class="btn btn-sm btn-warning">
                                            <i class="mdi mdi-pencil-outline"></i></a>
                                        {# <a href="" class="bnt btn-sm btn-danger">
                                            <i class="fa fa-times"></i>
                                        </a> #}
                                        {{ include('product/_delete.html.twig') }}
                                    </td>
                                </tr>
                            {% else %}
                                <div class="text-muted">No found records!</div>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>

                    <div class="d-flex justify-content-center">
                        {% if paginator.hasToPaginate %}
                            <nav aria-label="Page navigation example">
                                <ul class="pagination">
                                    {% if paginator.hasPreviousPage %}
                                        <li class="page-item"><a
                                                    href="{{ path('product_index', {page: paginator.previousPage}) }}"
                                                    rel="previous" class="page-link">Previous
                                            </a></li>
                                    {% else %}
                                        <li class="page-item disabled">
                                            <a href="#" tabindex="-1" class="page-link">Previous</a>
                                        </li>
                                    {% endif %}

                                    {% for i in 1..paginator.lastPage %}
                                        {% if i == paginator.currentPage %}
                                            <li class="page-item active">
                                                <a class="page-link"
                                                   href="{{ path('product_index', {page: i}) }}">{{ i }}</a>
                                            </li>
                                        {% else %}
                                            <li><a class="page-link"
                                                   href="{{ path('product_index', {page: i}) }}">{{ i }}</a></li>
                                        {% endif %}
                                    {% endfor %}

                                    {% if paginator.hasNextPage %}
                                        <li class="page-item next"><a
                                                    href="{{ path('product_index', {page: paginator.nextPage}) }}"
                                                    rel="next" class="page-link">Next</a></li>
                                    {% else %}
                                        <li class="page-item disabled">
                                            <a href="#" class="page-link">Next</a>
                                        </li>
                                    {% endif %}
                                </ul>
                            </nav>
                        {% endif %}
                    </div>

                </div>
            </div>
        </div>
    </div>

{% endblock %}

